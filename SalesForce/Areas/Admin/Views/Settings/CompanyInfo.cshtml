<script type="text/javascript" src="@Url.Content("~/Altair/assets/js/pages/plugins_datatables.js")"></script>

<script type="text/javascript">

    function OpenPopupModel(elem) {
        if (elem === 0) {
            $("#Companyname").val("");
            $("#Ownername").val("");
            $("#Categoryid").val("");
            $("#Mobileno").val("");
            $("#Address").val("");
            $("#Tin").val("");
            $("#Postcode").val("");
            $("#Shortname").val("");
            $("#Mushak").val("");
            $("#Ownertype").val("");
            $("#Economicactivity").val("");
            $("#Businesstype").val("");
            $("#Contactno").val("");
            $("#Contactperson").val("");
            $("#Location").val("");
            $("#Centralreg").val("");
            $("#Binno").val("");
            $("#Nidno").val("");
            $("#District").val("");
            $("#Thana").val("");
            $("#Email").val("");
            $("#Website").val("");

            $("#Id").val("0");
            $("#submitBtn").removeClass("md-btn-success md-btn-danger").addClass("md-btn-success").text("Create");
            $("#modalTitle").text("Create Company Info");
        }
        else {
            $.post("/Admin/Settings/GetSingleComInfoRecordById?Id=" + elem, function (data) {
                $("#Companyname").val(data.Companyname);
                $("#Ownername").val(data.Ownername);
                $("#Categoryid").val(data.Categoryid);
                $("#Mobileno").val(data.Mobileno);
                $("#Address").val(data.Address);
                $("#Tin").val(data.Tin);
                $("#Postcode").val(data.Postcode);
                $("#Shortname").val(data.Shortname);
                $("#Mushak").val(data.Mushak);
                $("#Ownertype").val(data.Ownertype);
                $("#Economicactivity").val(data.Economicactivity);
                $("#Businesstype").val(data.Businesstype);
                $("#Contactno").val(data.Contactno);
                $("#Contactperson").val(data.Contactperson);
                $("#Location").val(data.Location);
                $("#Centralreg").val(data.Centralreg);
                $("#Binno").val(data.Binno);
                $("#Nidno").val(data.Nidno);
                $("#District").val(data.District);
                $("#Thana").val(data.Thana);
                $("#Email").val(data.Email);
                $("#Website").val(data.Website);

                $("#Id").val(data.Id);
                $("#submitBtn").removeClass("md-btn-success md-btn-danger").addClass("md-btn-danger").text("Update");
                $("#modalTitle").text("Update Company Info");
            });
        }
        //UIkit.modal("#myModal").show();
        UIkit.modal("#myModal", { bgclose: false, keyboard: false }).show();
    }


    GetSearchResult();
    function GetSearchResult() {
        $.post("/Admin/Settings/GetCompanyInfoList", function (data) {
            $("#tb_Container").html(data);
            altair_datatables.dt_rkCustom("#rk_dtInfo2", ".rk_dtButton2", 380);
        });
    }

    function SubmitData() {
        var errorMsg = '';
        UIkit.modal.confirm('Are you sure to Submit this?', function () {
            if (!$("#Companyname").val()) {
                errorMsg = "Sorry, Please Check Required Fields.";
                UIkit.modal.alert(errorMsg);
            }
            else {
                $.post("/Admin/Settings/AddUpdateCompanyInfo", $("#InputForm").serialize(), function (data) {
                    if (data.Success) {
                        UIkit.modal.alert(data.Msg);
                        UIkit.modal("#myModal").hide();
                        GetSearchResult();
                    }
                    else {
                        UIkit.modal.alert(data.Msg);
                    }
                });
            }
        });
    }
</script>



