
@{
    ViewBag.Title = "Company Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model  SalesForce.Domain.Model.Inventory.VatCompanyinformationEntity

<form id="InputForm" action="">
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1 uk-container-center" id="tb_Container">
        </div>
    </div>

    <div class="md-fab-wrapper">
        <span class="md-fab md-fab-accent" id="note_add" onclick="OpenPopupModel(0);"><i class="material-icons">add</i> </span>
    </div>
    <div class="uk-modal" id="myModal">
        <div class="uk-modal-dialog uk-modal-body uk-modal-dialog-large" id="myModalBody">
            <button class="uk-modal-close uk-close" type="button"></button>
            @Html.HiddenFor(m => m.Id)
            <div class="uk-modal-header">
                <h3 class="uk-modal-title" id="modalTitle"></h3>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Company Name<span class="uk-text-danger"> *</span></label>
                    @Html.TextBoxFor(m => m.Companyname, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Owner Name
                    </label>
                    @Html.TextBoxFor(m => m.Ownername, new { @class = "md-input label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Company Category<span class="uk-text-danger"> *</span></label>
                    @Html.DropDownListFor(m => m.Categoryid, (List<SelectListItem>)ViewData["CategoryList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Mobile No.
                    </label>
                    @Html.TextBoxFor(m => m.Mobileno, new { @class = "md-input label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Address<span class="uk-text-danger"> *</span></label>
                    @Html.TextBoxFor(m => m.Address, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        TIN No.
                    </label>
                    @Html.TextBoxFor(m => m.Tin, new { @class = "md-input label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Post Code<span class="uk-text-danger"> *</span></label>
                    @Html.TextBoxFor(m => m.Postcode, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Short Name
                    </label>
                    @Html.TextBoxFor(m => m.Shortname, new { @class = "md-input label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Mushak<span class="uk-text-danger"> *</span></label>
                    @Html.DropDownListFor(m => m.Mushak, (List<SelectListItem>)ViewData["MushakList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Owner Type
                    </label>
                    @Html.DropDownListFor(m => m.Ownertype, (List<SelectListItem>)ViewData["OwnerTypeList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Economic Activity<span class="uk-text-danger"> *</span></label>
                    @Html.DropDownListFor(m => m.Economicactivity, (List<SelectListItem>)ViewData["EconomicActList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Business Type
                    </label>
                    @Html.DropDownListFor(m => m.Businesstype, (List<SelectListItem>)ViewData["BusinessTypeList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Contact No.<span class="uk-text-danger"> *</span></label>
                    @Html.TextBoxFor(m => m.Contactno, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Contact Person
                    </label>
                    @Html.TextBoxFor(m => m.Contactperson, new { @class = "md-input label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>Location<span class="uk-text-danger"> *</span></label>
                    @Html.TextBoxFor(m => m.Location, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Central Reg.
                    </label>
                    @Html.DropDownListFor(m => m.Centralreg, (List<SelectListItem>)ViewData["StatusList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>BIN No<span class="uk-text-danger"> *</span></label>
                    @Html.TextBoxFor(m => m.Binno, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        NID No.
                    </label>
                    @Html.TextBoxFor(m => m.Nidno, new { @class = "md-input label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>District<span class="uk-text-danger"> *</span></label>
                    @Html.DropDownListFor(m => m.District, (List<SelectListItem>)ViewData["DistrictList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Thana
                    </label>
                    @Html.DropDownListFor(m => m.Thana, (List<SelectListItem>)ViewData["ThanaList"], new { @class = "md-input md-input-success label-fixed" })
                </div>
            </div>
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-1-2">
                    <label>E-Mail<span class="uk-text-danger"> *</span></label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-1-2">
                    <label>
                        Website
                    </label>
                    @Html.TextBoxFor(m => m.Website, new { @class = "md-input label-fixed" })
                </div>
            </div>

            <div class="uk-modal-footer uk-text-right">
                <button type="button" class="md-btn md-btn-mini md-btn-success" id="submitBtn" onclick="SubmitData();">Create</button>
            </div>

        </div>
    </div>
</form>
